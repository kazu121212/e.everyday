<div class="col-12 py-5">
  <%= form_with model: @user, url: user_registration_path, class: "registration-main", local: true do |f| %>
    <div class="form-wrap col-10 col-lg-8 mx-auto justify-content-center">
      <div class="form-header col-10 col-lg-8 mx-auto">
        <h1 class="form-header-text text-center">会員情報入力</h1>
      </div>
      <%# エラーメッセージ %>
      <div class="form-group col-10 col-lg-8 mx-auto">
        <%= render "common/error", model: f.object %>
      </div>
      <%# フォーム %>
      <div class="form-group col-8 col-lg-6 mx-auto">
        <div class="d-flex align-items-center justify-content-start">
          <label class="form-text"><strong>ニックネーム</strong></label>
          <span class="badge text-danger mx-3">【必須】</span>
        </div>
        <%= f.text_field :name, class:"input-default form-control", id:"nickname", placeholder:"例) furima太郎", maxlength:"40" %>
      </div>
      <div class="form-group col-8 col-lg-6 mx-auto">
        <div class="d-flex align-items-center justify-content-start">
          <label class="form-text"><strong>メールアドレス</strong></label>
          <span class="badge text-danger mx-3">【必須】</span>
        </div>
        <%= f.email_field :email, class:"input-default form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group col-8 col-lg-6 mx-auto">
        <div class="d-flex align-items-center justify-content-start">
          <label class="form-text"><strong>パスワード</strong></label>
          <span class="badge text-danger mx-3">【必須】</span>
        </div>
        <%= f.password_field :password, class:"input-default form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
        <div class="form-text">※英字と数字の両方を含めて設定してください</div>
      </div>
      <div class="form-group col-8 col-lg-6 mx-auto">
        <div class="d-flex align-items-center justify-content-start">
          <label class="form-text"><strong>パスワード(確認)</strong></label>
          <span class="badge text-danger mx-3">【必須】</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class="form-group col-8 col-lg-6 mx-auto">
        <div class="d-flex align-items-center justify-content-start">
          <label class="form-text"><strong>お名前(全角)</strong></label>
          <span class="badge text-danger mx-3">【必須】</span>
        </div>
        <div class="d-flex justify-content-start">
          <%= f.text_field :last_name, class:"input-name form-control col-6", id:"last-name", placeholder:"例) 山田" %>
          <%= f.text_field :first_name, class:"input-name form-control col-6", id:"first-name", placeholder:"例) 陸太郎" %>
        </div>
      </div>
      <div class="form-group col-8 col-lg-6 mx-auto">
        <div class="d-flex align-items-center justify-content-start">
          <label class="form-text"><strong>お名前カナ(全角)</strong></label>
          <span class="badge text-danger mx-3">【必須】</span>
        </div>
        <div class="d-flex justify-content-start">
          <%= f.text_field :last_name_kana, class:"input-name form-control col-6", id:"last-name-kana", placeholder:"例) ヤマダ" %>
          <%= f.text_field :first_name_kana, class:"input-name form-control col-6", id:"first-name-kana", placeholder:"例) リクタロウ" %>
        </div>
      </div>
      <div class="form-group col-8 col-lg-6 mx-auto">
        <div class="d-flex align-items-center justify-content-start">
          <label class="form-text"><strong>生年月日</strong></label>
          <span class="badge text-danger mx-3">【必須】</span>
        </div>
        <div class="d-flex justify-content-start">
          <%= raw sprintf(
            f.date_select(:birth_date, 
              {
                with_css_classes: true, # 個別にclassを当てる設定
                use_month_numbers: true,
                prompt:'--',
                start_year: 1920,
                end_year: (Time.now.year - 5),
                date_separator: '%s'
              },
              {class: "select-birth form-control"}
            ),
            "<p class='form-text mx-1'>年</p>", 
            "<p class='form-text mx-1'>月</p>"
          )%>
          <p class="form-text mx-1">日</p>
        </div>
      </div>
      <div class="register-btn form-group col-8 col-lg-6 mx-auto d-flex justify-content-center pt-5">
        <%= f.submit "会員登録" ,class:"register-red-btn btn btn-outline-primary btn-lg" %>
      </div>
    </div>
  <% end %>
</div>

<%# <%= render "devise/shared/second-footer"%> 
